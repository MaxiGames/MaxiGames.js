{
  "name": "maxigames",
  "version": "1.0.0",
  "description": "Your one and only discord bot that includes all forms of minigames you will ever want. Have a suggestion for another? Open an issue!",
  "main": "src/index.js",
  "scripts": {
    "prepare": "husky install",
    "init": "node dist/src/index.js",
    "build": "rm -rf dist; tsc",
    "test": "mocha -r ts-node/register \"tests/**/*.spec.ts\"",
    "check-commands": "node .scripts/check-commands.js",
    "deploy-commands": "node .scripts/deploy-commands.js",
    "deploy": "./.scripts/heroku-deploy.sh",
    "start": "GOOGLE_APPLICATION_CREDENTIALS=\"$(pwd)/serviceAccountKey-dev.json\" npm run init",
    "postinstall": "npm run build",
    "heroku-postbuild": "npm run deploy-commands"
  },
  "engines": {
    "node": "16.x"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MaxiGames/MaxiGames.js.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MaxiGames/MaxiGames.js/issues"
  },
  "homepage": "https://github.com/MaxiGames/MaxiGames.js#readme",
  "devDependencies": {
    "@types/chai": "^4.2.21",
    "@types/mocha": "^9.0.0",
    "chai": "^4.3.4",
    "husky": "^7.0.0",
    "mocha": "^9.1.1",
    "pretty-quick": "^3.1.1",
    "ts-mockito": "^2.6.1",
    "ts-node": "^10.2.1",
    "ts-node-dev": "^1.1.8"
  },
  "dependencies": {
    "@discordjs/builders": "^0.6.0",
    "@discordjs/rest": "^0.1.0-canary.0",
    "@types/lodash": "^4.14.172",
    "@types/node": "^16.7.13",
    "discord-api-types": "^0.23.0",
    "discord.js": "^13.1.0",
    "dotenv": "^10.0.0",
    "firebase": "^9.0.2",
    "firebase-admin": "^9.11.1",
    "inversify": "^5.1.1",
    "reflect-metadata": "^0.1.13",
    "typescript": "^4.4.2"
  }
}
